    "badge": { "@id": "badgeclass", "@type": "@id" },
    "criteria": { "@id": "badgeclass:Criteria", "@type": "@id" },
    "tags": { "@id": "badgeclass:Tags", "@type": "@id" },
    "alignment": { "@id": "badgeclass:Alignment", "@type": "@id" },

    "issuer": { "@id": "issuerorg", "@type": "@id" },
